    package="com.crm.cardlinkmerchant">

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:configChanges="locale"
        android:icon="@mipmap/ic_splash_2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_splash_2"
        android:supportsRtl="true"
        android:theme="@style/Theme.CardLinkMerchant.NoActionBar">
        <activity
            android:name=".activity.TopupActivity"
            android:exported="false" />
        <activity
            android:name=".activity.BuyGiftActivity"
            android:exported="false" />
        <activity
            android:name=".activity.SwipeCardActivity"
            android:exported="false" />
        <activity
            android:name=".activity.TyxoaActivity"
            android:exported="false" />
        <activity
            android:name=".activity.SelectPurchaseMethodActivity"
            android:exported="false" />
        <activity
            android:name=".activity.SelectOutletActivity"
            android:exported="false" />
        <activity
            android:name=".activity.RegisterXinActivity"
            android:exported="false" />
        <activity
            android:name=".activity.SplashActivity"
            android:exported="true"
            android:theme="@style/SplashscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.TransactionDetailActivity"
            android:exported="true" />
        <activity
            android:name=".activity.SwitchBusinessActivity"
            android:exported="true" />
        <activity
            android:name=".activity.TransactionManagementActivity"
            android:exported="false" />
        <activity
            android:name=".activity.VerifyOTPActivity"
            android:exported="true" />
